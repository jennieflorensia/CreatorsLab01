<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:backgroundTint="@color/light_grey">

    <LinearLayout
        android:id="@+id/layout_signup"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/cornered_signup"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/application_name"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_signup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="40sp"
            android:fontFamily="@font/nunito"
            android:text="Hello,"
            android:textColor="@color/base_red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@drawable/round_et"
            android:padding="10sp">

            <EditText
                android:id="@+id/et_sign_up_username"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:background="@color/transparent"
                android:fontFamily="@font/nunito"
                android:hint="username"
                android:inputType="text"
                android:textColor="@color/base_red"
                android:textColorHint="@color/red2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@drawable/round_et"
            android:padding="10sp">

            <EditText
                android:id="@+id/et_sign_up_email"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:background="@color/transparent"
                android:fontFamily="@font/nunito"
                android:hint="email"
                android:inputType="text"
                android:textColor="@color/base_red"
                android:textColorHint="@color/red2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@drawable/round_et"
            android:padding="10sp">

            <EditText
                android:id="@+id/et_sign_up_password"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:background="@color/transparent"
                android:fontFamily="@font/nunito"
                android:hint="password"
                android:inputType="textPassword"
                android:textColor="@color/base_red"
                android:textColorHint="@color/red2" />

        </LinearLayout>

        <Button
            android:id="@+id/regis_btn_signup"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:backgroundTint="@color/et_login"
            android:fontFamily="@font/nunito"
            android:text="SIGN UP"
            android:textColor="@color/base_red"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/regis_btn_login"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:backgroundTint="@color/et_login"
            android:fontFamily="@font/nunito"
            android:text="LOGIN"
            android:textColor="@color/base_red"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>